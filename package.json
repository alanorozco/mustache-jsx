{
  "name": "mustache-jsx",
  "version": "0.0.0",
  "description": "Turn mustache templates into JSX output functions",
  "main": "src/mustache-jsx.mjs",
  "scripts": {
    "test": "ava",
    "test:update": "node test/runner.mjs --update",
    "copy": "mkdir -p dist && rsync -av --exclude=*.mjs src/repl/ dist && node src/repl/build-third-party.mjs",
    "build": "esbuild src/repl/index.mjs --bundle --loader:.template.mustache=text --loader:.template.js=text --outfile=dist/index.js",
    "serve": "npm run copy && npm run build -- --watch & serve dist",
    "dist": "npm run copy && npm run build -- --minify"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alanorozco/mustache-jsx.git"
  },
  "author": "alan orozco <a@orozco.xyz>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/alanorozco/mustache-jsx/issues"
  },
  "homepage": "https://github.com/alanorozco/mustache-jsx#readme",
  "devDependencies": {
    "@babel/core": "7.12.3",
    "@babel/plugin-syntax-jsx": "7.12.1",
    "ava": "3.15.0",
    "download": "8.0.0",
    "esbuild": "0.9.2",
    "fs-extra": "9.1.0",
    "prettier": "2.1.2",
    "tempy": "1.0.0"
  },
  "ava": {
    "files": [
      "!test/runner.mjs"
    ]
  },
  "dependencies": {
    "xmldom": "^0.5.0"
  }
}
